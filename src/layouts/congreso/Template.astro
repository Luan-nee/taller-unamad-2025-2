---
import { Layout } from "congreso:layouts";
import { Titulo, Datos, FotoWallpaper } from "congreso:componentes";

const { frontmatter } = Astro.props;

---

<Layout>
  <Titulo
    titulo={frontmatter.titulo}
    subtitulo={frontmatter.subtitulo}
    descripcion={frontmatter.descripcion}
    opciones={frontmatter.opciones}
  />
  <Datos
    titulo={frontmatter.titulo2}
    descripcion={frontmatter.descripcion2}
    elementos={frontmatter.datosComplemento}
  />
  <FotoWallpaper dirImage={frontmatter.imagenReferencia} />
</Layout>
