---
import CardPatrocinador from "../patrocinadores/CardPatrocinador.astro";

const patrocinadores = [
  {
    descripcion: "Descripción del patrocinador 1",
    enlace: "/patrocinadores/bossis.jpeg",
  },
  {
    descripcion: "Descripción del patrocinador 2",
    enlace: "/patrocinadores/la-nueva-linea.png",
  },
  {
    descripcion: "Descripción del patrocinador 3",
    enlace: "/patrocinadores/mundo-click.jpg",
  },
  {
    descripcion: "Descripción del patrocinador 4",
    enlace: "/patrocinadores/toreto-gym.jpg",
  },
  // Agrega más patrocinadores según sea necesario
];
---

<section
  id="patrocinadores"
  class="flex flex-col py-20 px-4 bg-gradient-to-br from-purple-50 via-white to-violet-50 dark:from-gray-900 dark:via-gray-800 dark:to-purple-950 transition-colors"
>
  <div class="w-full h-15"></div>
  <div class="w-full">
    <h2
      class="text-4xl md:text-5xl font-bold text-center mb-4 text-gray-900 dark:text-white"
    >
      Patrocinadores
    </h2><p
      class="text-center text-gray-600 dark:text-gray-400 mb-12 max-w-2xl mx-auto"
    >
      Agradecemos el apoyo de nuestros patrocinadores que hacen posible estos
      eventos
    </p>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">

      {
        patrocinadores.map((patrocinador) => (
          <CardPatrocinador
            descripcion={patrocinador.descripcion}
            enlace={patrocinador.enlace}
          />
        ))
      }

      </div>
    </div>
  </div>
</section>
