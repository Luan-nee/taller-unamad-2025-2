---
import ThemeIcon from "../ui/ThemeIcon.astro";
import BurguerBtn from "../ui/BurguerBtn.astro";
const informacion = {
  inicio: { name: "Inicio", path: "/#home" },
  eventos: { name: "Eventos", path: "/#eventos" },
  patrocinadores: { name: "Patrocinadores", path: "/#patrocinadores" },
  universidad: {
    siglas: "UNAMAD",
    nombre: "Universidad de Madre de Dios",
    logo: "/logo/LogoUnamad.png",
    path: "/#home",
  },
};
---

<header
  class="fixed top-0 left-0 right-0 z-50 bg-white/80 dark:bg-gray-900/80 backdrop-blur-md border-b border-gray-200 dark:border-gray-800 transition-colors"
>
  <div class="container mx-auto relative px-4 py-4">
    <div class="flex items-center justify-between">
      <a
        class="flex items-center gap-3 hover:opacity-80 transition-opacity"
        href={informacion.universidad.path}
        data-discover="true"
      >
        <img
          alt="UNAMAD Logo"
          class="h-12 w-auto"
          src={informacion.universidad.logo}
        />
        <div class="hidden md:block">
          <h1 class="text-lg font-bold text-purple-700 dark:text-purple-400">
            {informacion.universidad.siglas}
          </h1><p class="text-xs text-gray-600 dark:text-gray-400">
            {informacion.universidad.nombre}
          </p>
        </div></a
      >

      <div id="BurguerNav" class="md:hidden pt-4 pb-4 flex flex-col gap-4 absolute top-full w-screen left-0 bg-white dark:bg-gray-900/80 border-b border-gray-200 dark:border-gray-800 transition-colors px-4 hidden">
        <a
          class="text-gray-700 dark:text-gray-300 hover:text-purple-700 dark:hover:text-purple-400 transition-colors font-medium"
          href={informacion.inicio.path}
          data-discover="true">{informacion.inicio.name}</a
        >
        <a
          class="text-gray-700 dark:text-gray-300 hover:text-purple-700 dark:hover:text-purple-400 transition-colors font-medium"
          href={informacion.patrocinadores.path}
          data-discover="true">{informacion.patrocinadores.name}</a
        >
      </div>

      <nav class="hidden mr-[15rem] md:flex items-center gap-6">
        <a
          class="text-gray-700 dark:text-gray-300 hover:text-purple-700 dark:hover:text-purple-400 transition-colors font-medium"
          href={informacion.inicio.path}
          data-discover="true">{informacion.inicio.name}</a
        >
        <a
          class="text-gray-700 dark:text-gray-300 hover:text-purple-700 dark:hover:text-purple-400 transition-colors font-medium"
          href={informacion.patrocinadores.path}
          data-discover="true">{informacion.patrocinadores.name}</a
        >
      </nav>

      <div>
        <BurguerBtn />
        <ThemeIcon />
      </div>
    </div>
  </div>
</header>
<div class="w-full h-20"></div>
