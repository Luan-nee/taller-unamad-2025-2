---
interface Props {
    descripcion: string;
    enlace: string;
}

const { descripcion, enlace } = Astro.props;
---



<div
    class="group relative bg-white dark:bg-gray-800 rounded-xl p-2 flex items-center justify-center transition-all duration-300 hover:shadow-xl hover:shadow-purple-500/20 transform hover:-translate-y-2 dark:border-gray-700 hover:border-purple-400 dark:hover:border-purple-600"
>
    <img
        alt={descripcion}
        class="w-full object-contain transition-all duration-300"
        src={enlace}
    />
    <div
        class="absolute inset-0 bg-gradient-to-br from-purple-500/0 to-violet-500/0 group-hover:from-purple-500/5 group-hover:to-violet-500/5 rounded-xl transition-all duration-300"
    >
    </div>
</div>